<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Определения светлой темы -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#FF6200EE"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#FF03DAC5"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="White"/>
    <!-- Цвет фона для светлой темы -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="White"/>
    <SolidColorBrush x:Key="PrimaryForeground" Color="DarkBlue"/>
    <!-- Черный -->
    <!-- Стиль фона для Panel -->
    <Style TargetType="Panel" x:Key="PanelBackgroundStyle">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
    </Style>

    <!-- Стиль фона для Window -->
    <Style TargetType="Window" x:Key="WindowBackgroundStyle">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
    </Style>
</ResourceDictionary>