<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Определения темной темы -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#FF03DAC5"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#FF018786"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="PrimaryBackground" Color="Black"/>
    <SolidColorBrush x:Key="PrimaryForeground" Color="White"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
    
    <SolidColorBrush x:Key="ButtonBackground" Color="#FF03DAC5"/>

    <Style TargetType="Panel" x:Key="PanelBackgroundStyle">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
    </Style>
    <Style TargetType="Window" x:Key="WindowBackgroundStyle">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
    </Style>
    <Style x:Key="CustomButton" TargetType="Button">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"/>
        <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
       
    </Style>
</ResourceDictionary>